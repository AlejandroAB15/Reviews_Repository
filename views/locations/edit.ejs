<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Location</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/locations/<%= foundLocation.id %>?_method=PUT" method="POST" novalidate class="validatedForm" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" id="title" name="location[title]" value="<%= foundLocation.title %>" aria-describedby="validationServerTitleFeedback" required>
                <div class="valid-feedback">
                    Looks good! &#128076;
                </div>
                <div id="validationServerTitleFeedback" class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Add images...</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price per person:</label>
                <div class="input-group" id="inputGroupPrepend">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" name="location[price]"
                        aria-label="price" aria-describedby="inputGroupPrepend validationServerPriceFeedback" required value="<%= foundLocation.price %>">
                    <span class="input-group-text">.00</span>
                    <div class="valid-feedback">
                        Looks good! &#128076;
                    </div>
                    <div id="validationServerPriceFeedback" class="invalid-feedback">
                        Please provide a valid price.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="location[description]" required aria-describedby="validationServerDescriptionFeedback"><%= foundLocation.description %></textarea>
                <div class="valid-feedback">
                    Looks good! &#128076;
                </div>
                <div id="validationServerDescriptionFeedback" class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location[location]" value="<%= foundLocation.location %>" required aria-describedby="validationServerLocationFeedback">
                <div class="valid-feedback">
                    Looks good! &#128076;
                </div>
                <div id="validationServerLocationFeedback" class="invalid-feedback">
                    Please provide a valid address.
                </div>
            </div>
            <div class="mb-3">
                <h5> Delete Images </h5>
                <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                <% foundLocation.images.forEach(function(img, i) { %>
                    <div class="col">
                        <div class="card">
                            <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                            <div class="card-img-overlay text-end pt-1 pe-2">
                                <label class="visually-hidden" for="image-<%= i %>">Delete Image</label>
                                <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= img.filename %>"  id="image-<%= i %>">
                            </div>
                        </div>
                    </div>
                <% }) %>
                </div>  
            </div>

            <div class="mb-3">
                <button class="btn btn-info" type="submit">Update location</button>
            </div>

        </form>
        <a href="/locations/<%= foundLocation._id %>">Back to location</a>
    </div>
</div>